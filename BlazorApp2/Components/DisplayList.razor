
<div class="row">
@if (AnimeList != null)
{
    @foreach (var anime in AnimeList)
    {
        <div class="col">
            <div class="card">
                <img src="@anime.image_url">
                <div class="descriptions">
                    <h3>@anime.title</h3>
                    <p>
                        @anime.airing_start
                    </p>
                    <a href="episodedetails/@anime.mal_id">
                        <button>
                            <i class="fas fa-info-circle"></i>
                            More Details
                        </button>
                    </a>
                </div>
            </div>
        </div>
    }
}
</div>


@code {
    [Parameter]
    public ICollection<DailyAnime> AnimeList { get; set; }
}
