@page "/episodedetails/{id}"
@page "/episodedetails"
@inherits EpisodeDetailsBase

<h3>Episode Details</h3>

@if (Episode == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Episode.title</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@Episode.image_url" />

                    <h4>Episode ID : @Episode.mal_id</h4>
                    <h4>Rank : @Episode.rank</h4>
                    <h4>Start Date : @Episode.start_date</h4>
                </div>
                <div class="card-footer text-center">
                    <a href="/" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>
}
