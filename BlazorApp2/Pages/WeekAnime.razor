@page "/thisweek/"
@inherits WeekAnimeBase


<section class="upcomingSeason">
    @if (apiRspn == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <div>
            <h3 class="pageTitle">Anime this Week</h3>
        </div>
        <div class="dropdown">
            <span>
                <EditForm Model="Day">
                    <InputSelect class="dropdownBtn" Value="Day"
                                 ValueChanged="@((Days day) => SetDay(day))"
                                 ValueExpression="@(()=> Day)">
                        @foreach (var _day in Enum.GetValues(typeof(Days)))
                        {
                            <option class="dropdown-item" value="@_day">@_day.ToString()</option>
                        }
                    </InputSelect>
                </EditForm>
            </span>
        </div>
        <div class="row">
         @if (_AnimeList != null)
         {
            @foreach (var anime in _AnimeList)
            {
                <div class="col">
                    <div class="card">
                        <img src="@anime.image_url">
                        <div class="descriptions">
                            <h3>@anime.title</h3>
                            <p>
                                @anime.airing_start
                            </p>
                        </div>
                    </div>
                </div>
            }
         }
        </div>

    }

</section>